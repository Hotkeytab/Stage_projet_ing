<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <com.dna.plank.DrawView
        android:id="@+id/drawview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/tfe_semi_transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/layoutScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.003"


                android:orientation="vertical">

                <TextView
                    android:id="@+id/titlescore"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:gravity="center"
                    android:text="D.B position"
                    android:textColor="@color/yellow"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Chronometer
                    android:id="@+id/chrono2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/Layoutchrono"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.03"
                >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:gravity="center"
                    android:text="chronomÃ¨tre"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Chronometer
                    android:id="@+id/chrono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/signalpos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/oknok"
                    android:layout_width="94dp"
                    android:layout_height="76dp"
                    android:layout_weight="1"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="hello3"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="0.01"
                >

                <RadioButton
                    android:id="@+id/radio_gpu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/radio_gpu"
                    android:textColor="@color/black"
                    />

                <RadioButton
                    android:id="@+id/radio_cpu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/radio_cpu"
                    android:textColor="@color/black" />


            </RadioGroup>

            <LinearLayout
                android:id="@+id/btnlayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/FiBn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.003"
                    android:background="@drawable/exit"
                    android:text="Arret" />


            </LinearLayout>


        </LinearLayout>







    </LinearLayout>





</RelativeLayout>
